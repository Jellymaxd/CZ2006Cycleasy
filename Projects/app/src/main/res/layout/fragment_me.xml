<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mebackgroundgray"
        android:orientation="horizontal"></LinearLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="100dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="150dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:text="@string/hi_username"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:gravity="bottom"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintStart_toEndOf="@id/profilePic"/>

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_profile"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="531dp"


        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/favpathbtn"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                style="@style/Widget.AppCompat.Button.Colored"
                android:drawableStart="@drawable/ic_favorite"
                android:drawableLeft="@drawable/ic_favorite"
                android:drawableEnd="@drawable/rightarrowlight"
                android:drawableRight="@drawable/rightarrowlight"
                android:drawablePadding="20dp"
                android:fadingEdge="horizontal"
                android:gravity="center|start"
                android:paddingLeft="10dp"
                android:text="@string/view_edit_your_favorite_path"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                app:icon="@drawable/ic_favorite"
                app:iconPadding="24dp"
                app:iconTint="@null"
                app:layout_constraintBottom_toTopOf="@+id/cychistorybtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/cychistorybtn"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                style="@style/Widget.AppCompat.Button.Colored"
                app:icon="@drawable/ic_history"
                app:iconPadding="24dp"
                app:iconTint="@null"
                android:drawableStart="@drawable/ic_history"
                android:drawableLeft="@drawable/ic_history"
                android:drawableEnd="@drawable/rightarrowlight"
                android:drawableRight="@drawable/rightarrowlight"
                android:drawablePadding="20dp"
                android:gravity="center|start"
                android:paddingLeft="5dp"
                android:text="@string/your_cycling_history"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                app:layout_constraintBottom_toTopOf="@+id/editprofilebtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/favpathbtn" />

            <Button
            android:id="@+id/editprofilebtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:background="@color/white"
            android:drawableRight="@drawable/rightarrowlight"
            android:drawableLeft="@drawable/ic_resume"
            android:drawableStart="@drawable/ic_resume"
            android:drawableEnd="@drawable/rightarrowlight"
            android:text="@string/your_profile"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:paddingLeft="10dp"
            android:gravity="center|start"
            android:drawablePadding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cychistorybtn"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>